#include <stdio.h>
#include  <stdlib.h>
int main ()
{
	int n1, n2, n3, n4, soma; 
	// Recebe as quatro notas 
	printf ("Digite quatro numeros inteiros: \n");
	scanf ("%d", &n1);
	scanf ("%d", &n2);
	scanf ("%d", &n3);
	scanf ("%d", &n4);
	// Ca√ßcula a medeia 
	soma = n1 + n2 + n3 + n4; 
	// Formata a mensgaem de saida para duas casas decimais 
	printf("Vaalor da soma: %d",soma);
	// Mostra o resultado da media 
	return 0;
}
